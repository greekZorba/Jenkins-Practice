pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'echo "Hello World"'
                sh '''
                    echo "Multiline shell steps works too"
                    ls -lah
                '''
            }
        }
        stage('Deploy') {
            steps {
                retry(3) {
                    dir('shellScripts'){
                        sh './flakey-deploy.sh'
                    }
                }

                timeout(time: 3, unit: 'MINUTES') {
                    dir('shellScripts'){
                        sh './health-check.sh'
                    }
                }
            }
        }
    }
}
